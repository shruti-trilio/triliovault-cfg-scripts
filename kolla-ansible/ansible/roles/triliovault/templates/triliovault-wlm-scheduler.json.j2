{
	"command": "/usr/bin/python3 /usr/bin/workloadmgr-scheduler --config-file=/etc/triliovault-wlm/triliovault-wlm.conf",
	"config_files": [{
			"source": "{{ container_config_directory }}/triliovault-wlm-scheduler.conf",
			"dest": "/etc/triliovault-wlm/triliovault-wlm.conf",
			"owner": "nova",
			"perm": "0755"
		},
		{
			"source": "{{ container_config_directory }}/triliovault-wlm-logging.conf",
			"dest": "/etc/triliovault-wlm/wlm_logging.conf",
			"owner": "nova",
			"perm": "0755"
		},
		{
                        "source": "{{ container_config_directory }}/api-paste.ini",
                        "dest": "/etc/triliovault-wlm/api-paste.ini",
                        "owner": "nova",
                        "perm": "0755"
                },
                {
                        "source": "{{ container_config_directory }}/fuse.conf",
                        "dest": "/etc/fuse.conf",
                        "owner": "nova",
                        "perm": "0644"
                }{% if triliovault_copy_ceph_s3_ssl_cert | bool %},
                {
                        "source": "{{ container_config_directory }}/{{ triliovault_s3_ssl_cert_file_name }}",
                        "dest": "/etc/triliovault-wlm/triliovault-s3.pem",
                        "owner": "nova",
                        "perm": "0600"
                }{% endif %}
	],
	"permissions": [{
		"path": "/var/log/triliovault",
		"owner": "nova:nova"
	}]
}
