#!/bin/bash
set -ex


## Start triliovaut-wlm-api service
/usr/bin/python3 /usr/bin/workloadmgr-scheduler \
  --config-file=/etc/triliovault-wlm/triliovault-wlm.conf \
  --config-file=/etc/triliovault-wlm/triliovault-wlm-ids.conf

status=$?
if [ $status -ne 0 ]; then
  echo "Failed to start triliovaut-wlm-scheduler: $status"
  exit $status
fi