- name: Restart triliovault-datamover container
  become: true
  ansible.builtin.systemd:
    state: restarted
    name: "edpm_triliovault-datamover.service"
  listen: "Restart triliovault-datamover"

{% for target in triliovault_backup_targets if target.backup_target_type == "s3" %}
- name: Restart triliovault-object-store-{{ target.backup_target_name }} container
  become: true
  ansible.builtin.systemd:
    state: restarted
    name: "edpm_triliovault-object-store_{{ target.backup_target_name }}.service"
  listen: "Restart triliovault-object-store-{{ target.backup_target_name }}"
{% endfor %}
