{
    "image": "{{ triliovault_datamover_image }}",
    "privileged": true,
    "user": "nova",
    "restart": "always",
    "command": "kolla_start",
    "net": "host",
    ipc: host,
    "environment": {
        "KOLLA_CONFIG_STRATEGY":"COPY_ALWAYS"
    },
    "volumes": [
        "/var/lib/trilio/config/triliovault-datamover:/var/lib/kolla/config_files/triliovault-datamover:ro",
{% if ca_bundle_exists|bool %}
        "{{ edpm_nova_tls_ca_src_dir }}/tls-ca-bundle.pem:/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem:ro,z",
{% endif %}
        "/etc/localtime:/etc/localtime:ro",
        "/lib/modules:/lib/modules:ro",
        "/dev:/dev",
        "/var/log/containers/triliovault-datamover:/var/log/triliovault:z",
        "/var/lib/libvirt:/var/lib/libvirt",
        "/run/libvirt:/run/libvirt:shared",
        "/var/lib/nova:/var/lib/nova:shared",
        "/var/lib/iscsi:/var/lib/iscsi:z",
        "/etc/multipath:/etc/multipath:z",
        "/etc/multipath.conf:/etc/multipath.conf:ro",
        "/etc/iscsi:/etc/iscsi:ro",
        "/etc/nvme:/etc/nvme",
        "/run:/run",
        "/var/lib/openstack/config/ceph:/var/lib/kolla/config_files/ceph:ro",
        "/etc/ssh/ssh_known_hosts:/etc/ssh/ssh_known_hosts:ro",
        "/sys/class/net:/sys/class/net",
        "/sys/bus/pci:/sys/bus/pci",
        "/boot:/boot:ro",
        "/var/lib/openstack/config/nova/01-nova.conf:/var/lib/kolla/config_files/nova/01-nova.conf:ro"
    ]
}





            volumes:
              list_concat:
                - {get_attr: [ContainersCommon, volumes]}
                - {get_param: NovaComputeOptVolumes}
                - {get_param: TrilioDatamoverOptVolumes}
