{
  "command": "/opt/triliovault/start_triliovault_datamover.sh",
  "config_files": [
    {
      "dest": "/etc/nova/nova.conf",
      "merge": true,
      "preserve_properties": true,
      "source": "/var/lib/kolla/config_files/nova/01-nova.conf"
    },
    {
      "dest": "/etc/triliovault-datamover/",
      "merge": true,
      "preserve_properties": true,
      "source": "/var/lib/kolla/config_files/triliovault-datamover/*"
    },
    {
      "dest": "/etc/ceph/",
      "merge": true,
      "preserve_properties": true,
      "source": "/var/lib/kolla/config_files/ceph/"
    },
    {
      "source": "/var/lib/kolla/config_files/triliovault-datamover/start_triliovault_datamover.sh",
      "dest": "/opt/triliovault/start_triliovault_datamover.sh",
      "owner": "nova",
      "perm": "0750"
    }
  ],
  "permissions": [
    {
      "owner": "nova:nova",
      "path": "/var/log/triliovault",
      "recurse": true
    },
    {
      "owner": "nova:nova",
      "path": "/var/lib/nova/triliovault-mounts",
      "recurse": false
    },
    {
      "owner": "nova:nova",
      "path": "/etc/ceph/ceph.client.cinder.keyring",
      "perm": "0600"
    }
  ]
}

